## <%= generated_by_babushka %>
## <%= var :domain %> virtual hosting
##

server.modules += ( "mod_simple_vhost" )

$HTTP ["host"] == "<%= var :domain %>" {
server.document-root = "<%= var :document_root %>/web"
  server.indexfiles = ( "index.php", "index.html")
  server.error-handler-404 = "/index.php"

  url.rewrite-once = (
    "^/(.*)\.(.*)" => "$0",
    "^/([^.]+)$" => "/index.php/$1",
    "^/$" => "/index.php"
  )

}
